<% provide(:title, "profile") %>
<div class="profile-wrapper">
  <h1><%= get_user_name(@user) %></h1>
  <p><%= @user.email %></p>
  <% if @user.id == current_user.id %>
    <%= link_to "退会", user_path(@user.id), method: :delete, data: {confirm: "本当に退会しますか?"}, class: "btn btn-danger" %>
  <% end %>
</div>
<% if @user.id == current_user.id %>
  <div class="start-picture-form">
    <a href=<%= user_path(current_user.id) %>>
      <%= image_tag "dummy_user.jpg" %>
    </a>
    <a href=<%= new_picture_path %> class="show-picture-form" >
      <input type="text" placeholder="What's on your mind?(New Post)" class="form-control" readonly="true">
    </a>
  </div>
<% end %>
<%= render partial: @pictures %>