<% provide(:title, "friends") %>
<h1>People You May Know</h1>

<div class="users-wrapper">
  <% @users.each do |user| %>
    <div class="user">
      <div class="user-item">
        <%= image_tag "dummy_user", class: "user-image", alt: "user-image" %>
        <div class="user-name"><%= link_to "#{get_user_name(user)}", user_path(user.id) %></div>
      </div>
      <div class="user-btns">
        <button type="button" class="btn btn-primary">Add friend</button>
        <button type="button" class="btn btn-secondary">Remove</button>
      </div>

    </div>
  <% end %>

</div>